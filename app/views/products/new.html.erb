<h1>New Product</h1>
<p>
	<%= form_for @product do |f| %>
<div>
	<%= f.label :title %>
	<br>
	<%= f.text_field :title %>
</div>
<br>
<div>
	<%= f.label :description %>
	<br>
	<%= f.text_area :description %>
</div>
<br>
<div>
	<%= f.label :price %>
	<br>
	<%= f.text_field :price %>
</div>
<br>
<div>
	<%= f.label :stock_quantity %>
	<br>
	<%= f.text_field :stock_quantity %>
</div>
<br>
<div>
	<%= f.submit "Create Product" %> 
</div>
<% end %>
</p>
